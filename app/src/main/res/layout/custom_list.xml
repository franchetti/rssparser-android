<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerVertical="true"
    android:paddingBottom="@dimen/nav_header_vertical_spacing">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/textColorSecondary"
        app:cardCornerRadius="@dimen/cardview_radius"
        app:cardElevation="@dimen/nav_header_vertical_spacing"
        app:contentPaddingBottom="@dimen/_7sdp"
        app:contentPaddingLeft="@dimen/_5sdp"
        app:contentPaddingRight="@dimen/_10sdp"
        app:contentPaddingTop="@dimen/_7sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_and_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#444"
                    android:textSize="@dimen/_12ssp"
                    tools:text="09:46  |  26.01.2019  |  Giorgio"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    tools:text="NUOVA REDAZIONE 2019"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorLight"
                    android:textSize="@dimen/_12ssp"
                    tools:text="BF - La voce del Bruno-Franchetti Redazione Giornalino 2019 Coordinatore progetto: prof...."/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>